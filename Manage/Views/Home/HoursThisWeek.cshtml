@model int

    <div class="containerPercentage horizontal flat">
        <a class="calibri" href="@Url.Action("Index", "Timesheet")">Go to Timesheet</a>
        <h4>Your Hours this Week</h4>

        <div class="progress-barPercetage horizontal">
            <div class="progress-track">
                <div class="progress-fill">
                    <span>@Html.Raw(Model + "%")</span>
                </div>
            </div>
        </div>
    </div>


<script>
    $('.horizontal .progress-fill span').each(function(){
  var percent = $(this).html();
  $(this).parent().css('width', percent);
});


$('.vertical .progress-fill span').each(function(){
  var percent = $(this).html();
  var pTop = 100 - ( percent.slice(0, percent.length - 1) ) + "%";
  $(this).parent().css({
    'height' : percent,
    'top' : pTop
  });
});
</script>